@model book_site.Data.Models.Genre

<h4>Добавление нового жанра</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameGenre" class="control-label"></label>
                <input asp-for="NameGenre" class="form-control" />
                <span asp-validation-for="NameGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CreateProduct">Назад</a>
