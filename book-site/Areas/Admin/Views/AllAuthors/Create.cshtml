@model book_site.Data.Models.Author

<h4>Добавление нового автора</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameAuthor" class="control-label"></label>
                <input asp-for="NameAuthor" class="form-control" />
                <span asp-validation-for="NameAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

