@model book_site.Data.Models.Author

<h4>Редактирование автора</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameAuthor" class="control-label"></label>
                <input asp-for="NameAuthor" class="form-control" />
                <span asp-validation-for="NameAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку авторов</a>
</div>

