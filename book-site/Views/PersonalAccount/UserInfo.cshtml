@model book_site.ViewModel.UserInfoViewModel

<style>

    .user__info__flex {
        display: flex;
        flex-wrap: wrap;
    }
</style>

<h4>Редактирование персональных данных</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="UserInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="p-2 mt-2 border border-dark rounded">
                <h4 class="mt-2">Личная информация</h4>
                <div class="user__info__flex">
                    <div class="form-group col-md-2 ml-0 mr-auto">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2 ml-auto mr-auto">
                        <label asp-for="SurName" class="control-label"></label>
                        <input asp-for="SurName" class="form-control" />
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2 ml-auto mr-auto">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2 ml-auto mr-0">
                        <label asp-for="BirthDate" class="control-label"></label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="p-2 mt-2 border border-dark rounded">
                <h4 class="mt-2">Контакты</h4>
                <div class="user__info__flex">
                    <div class="form-group col-md-5 ml-0 mr-auto">
                        <label asp-for="PhonNumber" class="control-label"></label>
                        <input asp-for="PhonNumber" class="form-control" />
                        <span asp-validation-for="PhonNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5 ml-auto mr-0">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="p-2 mt-2 border border-dark rounded">
                <h4 class="mt-2">Адрес</h4>
                <div class="user__info__flex">
                    <input type="hidden" asp-for="AdressId" class="form-control" />
                    <div class="form-group col-md-3 ml-0 mr-auto">
                        <label asp-for="Country" class="control-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 ml-auto mr-auto">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 ml-auto mr-0">
                        <label asp-for="Street" class="control-label"></label>
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="user__info__flex">
                    <div class="form-group col-md-2 ml-0 mr-auto">
                        <label asp-for="House" class="control-label"></label>
                        <input asp-for="House" class="form-control" />
                        <span asp-validation-for="House" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2 ml-auto mr-auto">
                        <label asp-for="Building" class="control-label"></label>
                        <input asp-for="Building" class="form-control" />
                        <span asp-validation-for="Building" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2 ml-auto mr-auto">
                        <label asp-for="Flat" class="control-label"></label>
                        <input asp-for="Flat" class="form-control" />
                        <span asp-validation-for="Flat" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2 ml-auto mr-0">
                        <label asp-for="Floor" class="control-label"></label>
                        <input asp-for="Floor" class="form-control" />
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Сохранить" class="btn btn-success btn-block mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary btn-block mt-2" asp-action="Index">Отменить</a>
</div>

