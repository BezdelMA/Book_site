@model book_site.Data.Models.Book

    <div class="preview">
        <div class="content-top-popular-content">
            <a href="~/Home/BookId/@Model.Id"><img src="~/@Model.Img" alt="Book"></a>
            <div class="content-top-popular-letters">
                <p>@Model.Mark</p>
            </div>
        </div>
        <div class="preview-info">
            <div class="price">@Model.Price р.</div>
            <div class="name-book"><a asp-controller="Catalog" asp-action="Search" asp-route-search="@Model.NameBook">@Model.NameBook</a></div>
            <div class="author"><a asp-controller="Catalog" asp-action="Search" asp-route-search="@Model.Author.NameAuthor">@Model.Author.NameAuthor</a></div>
        </div>
    </div>