@model LoginViewModel

@{
    ViewData["Title"] = "Вход на сайт";
}

<h1>Вход зарегистрированного пользователя</h1>

<form asp-controller="Account" asp-action="Login" method="post" asp-antiforgery="true">
    <div class="container login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.HiddenFor(model => model.ReturnURL)

        <div class="form-group">
            <input asp-for="UserName" placeholder="Имя пользователя" class="col-md-12 mt-3" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Пароль" class="col-md-12 mt-3" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <span>
                <input asp-for="RememberMe" class="checkbox mt-3" />
                Запомнить меня
            </span>
        </div>
        <input type="submit" value="Войти" class="btn btn-primary mt-3" />
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary mt-3">Зарегистрироваться</a>
    </div>
</form>

